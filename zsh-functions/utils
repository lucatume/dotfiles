# Download and execute a bash script.
function rex(){
	sourceScriptUrl=$1
	if [ ! ${sourceScriptUrl} ]; then
		echo "You must specify the URL of the script to execute"
		echo "Example:"
		echo "	rex https://gist.githubusercontent.com/user/hash/raw/hash-2/script.sh"
		exit 1
	fi
	curl -L ${sourceScriptUrl} | bash
}

# Open a file in Marked 2.
function marked(){
	if [ $1 ]; then
    	open -a "Marked 2" $1;
	else
    	open -a "Marked 2";
	fi
}
